@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0">Roller (@Model.Count())</h5>
        <a class="btn btn-primary" href="/Admin/Role/AddRole/">Yeni Rol Ekle</a>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Rol Adı</th>
                    <th>Dahası</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model.Count()>0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>

                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/Admin/Role/EditRole/@item.Id"><i class='bx bx-edit'></i> Düzenle</a>

                                        <a class="dropdown-item" href="/Admin/Role/DeleteRole/@item.Id"><i class='bx bx-trash me-1'></i> Sil</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr style="text-align:center;">
                        <td colspan="2" style="color:darkred;">Herhangi bir rol bulunamadı!</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center;">
    </div>
</div>

