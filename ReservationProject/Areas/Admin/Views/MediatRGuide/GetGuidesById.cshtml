@model GetGuideByIdQueryResult
@{
    ViewData["Title"] = "GetGuidesById";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <!-- Basic with Icons -->
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">MediatR Rehber Bilgilerini Düzenle</h5>
                <a class="btn btn-primary" href="/Admin/Guide/Index/">Geri Dön</a>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    @Html.HiddenFor(x=>x.GuideID)
                    <span asp-validation-for="GuideName" class="text-danger float-right"></span>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Adı Soyadı</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class='bx bx-user'></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       id="basic-icon-default-fullname"
                                       placeholder="Adı Soyadı"
                                       aria-label="Adı Soyadı"
                                       aria-describedby="basic-icon-default-fullname2" asp-for="GuideName" />
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="GuideDescription" class="text-danger float-right"></span>
                    <div class="row mb-3">
                        <label class="col-sm-2 form-label" for="basic-icon-default-message">Açıklama</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-message2" class="input-group-text">
                                    <i class="bx bx-comment"></i>
                                </span>
                                <textarea id="basic-icon-default-message"
                                          class="form-control"
                                          placeholder="Açıklama"
                                          aria-label="Açıklama"
                                          aria-describedby="basic-icon-default-message2" asp-for="GuideDescription"></textarea>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="GuideImage" class="text-danger float-right"></span>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Fotoğraf <img src="~/guideimages/@Model.GuideImage" class="avatar avatar-sm rounded-circle me-2" alt="Guide Image"></label>

                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text">
                                    <i class="bx bx-image"></i>
                                </span>
                                <input type="file"
                                       id="basic-icon-default-company"
                                       class="form-control"
                                       placeholder="Fotoğraf"
                                       aria-label="Fotoğraf"
                                       aria-describedby="basic-icon-default-company2" asp-for="GuideImage" />
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

