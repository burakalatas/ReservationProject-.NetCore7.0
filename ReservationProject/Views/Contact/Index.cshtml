@model DTOLayer.DTOs.ContactDTOs.SendMessageDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">İletişime Geç</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index/">Ana sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>İletişime Geç</h5>
                            <p class="mt-3 mb-4">
                                Merhaba, bizimle 7/24 iletişime geçebileceğinini biliyor muydunuz?
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Email:</h6>
                            <p>
                                <a href="mailto:mail@traversal.com">
                                    mail@traversal.com
                                </a>
                            </p>
                            <h6 class="mt-4">Konumumuz:</h6>
                            <p> 78-80 Upper St Giles St. Norwich NR2 1LT United Kingdom.</p>
                            <h6 class="mt-4">İletişim Numaramız:</h6>
                            <p class="margin-top"><a href="tel:+44-255-366-88">+44-255-366-88</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form method="post" class="signin-form">
                        <div class="input-grids">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <div class="form-group">
                                <input type="text" placeholder="Adınız*" required asp-for="UserName" class="contact-input" />
                            </div>
                            <span asp-validation-for="UserMail" class="text-danger"></span>
                            <div class="form-group">
                                <input type="email" placeholder="Mail Adresiniz*" required asp-for="UserMail" class="contact-input" />
                            </div>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                            <div class="form-group">
                                <input type="text" placeholder="Konu*" required asp-for="Subject" class="contact-input" />
                            </div>
                        </div>
                        <span asp-validation-for="Message" class="text-danger"></span>
                        <div class="form-group">
                            <textarea placeholder="Buraya mesajınızı yazabilirsiniz*" required asp-for="Message"></textarea>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Map</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sin!4v1493028309728"
                        style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
    </div>
</section>
<!-- /contact-form -->
