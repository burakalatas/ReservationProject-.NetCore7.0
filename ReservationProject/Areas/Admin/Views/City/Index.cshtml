@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<h2 class="text-center">Şehir-Ülke İşlemleri</h2>
<br />
<button type="button" class="btn btn-outline-info" id="btngetlist">Şehir Listesi</button>
<button type="button" class="btn btn-outline-primary" id="btngetbyid">ID ile Getir</button>
<button type="button" class="btn btn-outline-success" id="btnaddcity">Şehir Ekle</button>
<button type="button" class="btn btn-outline-warning" id="btnupdatecity">Şehir Güncelle</button>
<button type="button" class="btn btn-outline-danger" id="btndeletecity">Şehir Sil</button>
<br />
<br />
<div id="citylist">
</div>
<div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">ID</label>
        <div class="col-sm-10">
            <div class="input-group input-group-merge">
                <span id="basic-icon-default-fullname2" class="input-group-text">
                    <i class="bx bx-map"></i>
                </span>
                <input type="number"
                       class="form-control"
                       id="txtDestinationID"
                       placeholder="ID"
                       aria-label="ID"
                       aria-describedby="basic-icon-default-fullname2" />
            </div>
        </div>
    </div>
</div>
<div id="destinationlistbyid">
</div>
<hr />
<div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Başlangıç Şehri</label>
        <div class="col-sm-10">
            <div class="input-group input-group-merge">
                <span id="basic-icon-default-fullname2" class="input-group-text">
                    <i class="bx bx-map"></i>
                </span>
                <input type="text"
                       class="form-control"
                       id="txtDestinationStartingCity"
                       placeholder="Başlangıç şehri"
                       aria-label="Başlangıç şehri"
                       aria-describedby="basic-icon-default-fullname2" />
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Varış Şehri</label>
        <div class="col-sm-10">
            <div class="input-group input-group-merge">
                <span id="basic-icon-default-fullname2" class="input-group-text">
                    <i class="bx bx-map"></i>
                </span>
                <input type="text"
                       class="form-control"
                       id="txtDestinationCity"
                       placeholder="Varış şehri"
                       aria-label="Varış şehri"
                       aria-describedby="basic-icon-default-fullname2" />
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Gün Sayısı</label>
        <div class="col-sm-10">
            <div class="input-group input-group-merge">
                <span id="basic-icon-default-company2" class="input-group-text">
                    <i class="bx bx-sun"></i>
                </span>
                <input type="text"
                       id="txtDestinationDayNight"
                       class="form-control"
                       placeholder="3 Gece 4 Gün"
                       aria-label="3 Gece 4 Gün"
                       aria-describedby="basic-icon-default-company2" />
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Fiyat</label>
        <div class="col-sm-10">
            <div class="input-group input-group-merge">
                <span id="basic-icon-default-company2" class="input-group-text">
                    <i class="bx bx-money"></i>
                </span>
                <input type="number"
                       id="txtDestinationPrice"
                       class="form-control"
                       placeholder="1500"
                       aria-label="1500"
                       aria-describedby="basic-icon-default-company2" />
                <span id="basic-icon-default-email2" class="input-group-text">$</span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Tur Kapasitesi</label>
        <div class="col-sm-10">
            <div class="input-group input-group-merge">
                <span id="basic-icon-default-company2" class="input-group-text">
                    <i class="bx bx-body"></i>
                </span>
                <input type="number"
                       id="txtDestinationCapacity"
                       class="form-control"
                       placeholder="20"
                       aria-label="20"
                       aria-describedby="basic-icon-default-company2" />
            </div>
        </div>
    </div>
    <label class="col-sm-2 col-form-label" for="basic-icon-default-company">Tur Durumu</label>
    <input type="checkbox" id="cbDestinationStatus" placeholder="Durum" class="form-check-input" />
    <label>Aktif</label>

</div>

<script>
    $("#btngetlist").click(function () {
        $.ajax({
            contentType: "application/json",
            dataType: "json",
            type: "Get",
            url: "/Admin/City/CityList/",
            success: function (func) {
                let w = jQuery.parseJSON(func);
                console.log(w);
                let tablehtml = "<table class=table table-bordered><tr><th>Başlangıç Şehri</th><th>Varış Şehri</th><th>Gün Sayısı</th><th>Fiyat</th></tr>";
                $.each(w, (index, value) => {
                    tablehtml += `<tr><td>${value.DestinationStartingCity}</td> <td>${value.DestinationCity}</td><td>${value.DestinationDayNight}</td> <td>$${value.DestinationPrice}</td> </tr>`
                });
                tablehtml += "</table>";
                $("#citylist").html(tablehtml);
            }
        });
    });

    $("#btnaddcity").click(function () {
        let cityvalues = {
            DestinationStartingCity: $("#txtDestinationStartingCity").val(),
            DestinationCity: $("#txtDestinationCity").val(),
            DestinationDayNight: $("#txtDestinationDayNight").val(),
            DestinationPrice: $("#txtDestinationPrice").val(),
            DestinationCapacity: $("#txtDestinationCapacity").val(),
            DestinationStatus: $("#cbDestinationStatus").is(":checked")
        };

        $.ajax({
            type: "post",
            url: "/Admin/City/CityAdd/",
            data: cityvalues,
            success: function (func) {
                let result = jQuery.parseJSON(func);
                alert("Rota başarılı bir şekilde eklendi!");
            }
        });
    });

    $("#btngetbyid").click(x=>{
        let id = $("#txtDestinationID").val();

        $.ajax({
            contentType:"application/json",
            dataType:"json",
            type:"Get",
            url: "/Admin/City/CityGetById/",
            data:{DestinationID:id},
            success:function(func2){
                let result =jQuery.parseJSON(func2);
                console.log(result);
                let htmlstr = `<table class=table table-bordered><tr><th>Başlangıç Şehri</th><th>Varış Şehri</th><th>Gün Sayısı</th><th>Fiyat</th></tr><tr><td>${result.DestinationStartingCity}</td> <td>${result.DestinationCity}</td><td>${result.DestinationDayNight}</td> <td>$${result.DestinationPrice}</td> </tr>`;
                $("#destinationlistbyid").html(htmlstr);
            }
        });
    });

    $("#btndeletecity").click(x=>{
        let id = $("#txtDestinationID").val();

        $.ajax({
            url: "/Admin/City/CityDelete/"+id,
            type:"post",
            contentType:"application/json",
            dataType:"json",
            success:function(func3){
                alert("Rota başarılı bir şekilde silindi!");
                loadData();
            }
        });
    });

    $("#btnupdatecity").click(function(){
        let values = {
            DestinationID: $("#txtDestinationID").val(),
            DestinationStartingCity: $("#txtDestinationStartingCity").val(),
            DestinationCity: $("#txtDestinationCity").val(),
            DestinationDayNight: $("#txtDestinationDayNight").val(),
            DestinationPrice: $("#txtDestinationPrice").val(),
            DestinationCapacity: $("#txtDestinationCapacity").val(),
            DestinationStatus: $("#cbDestinationStatus").is(":checked")
        };

        $.ajax({
            type: "post",
            url: "/Admin/City/CityUpdate/",
            data: values,
            success: function (func4) {
                let result = jQuery.parseJSON(func4);
                alert("Rota başarılı bir şekilde güncellendi!");
            }
        });
    });
</script>

