@model IEnumerable<Destination>

<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Keşfet</h6>
            <h3 class="hny-title">Popüler Rotalar</h3>
        </div>
        <div class="row bottom-ab-grids">
            <!--/row-grids-->
            @foreach (var item in Model)
            {
                <div class="col-lg-6 subject-card mt-4">
                    <div class="subject-card-header p-4">
                        <a href="/Destination/DestinationDetails/@item.DestinationID" class="card_title p-lg-4d-block">
                            <div class="row align-items-center">
                                <div class="col-sm-5 subject-img">
                                    <img src="~/Traversal/assets/images/@item.DestinationImage" class="img-fluid" alt="">
                                </div>
                                <div class="col-sm-7 subject-content mt-sm-0 mt-4">
                                    <h4>@item.DestinationCity</h4>
                                    <p>@item.DestinationDayNight</p>
                                    <div class="dst-btm">
                                        <h6 class=""> Başlayan fiyatlarla </h6>
                                        <span>$@item.DestinationPrice</span>
                                    </div>
                                    <p class="sub-para">@item.DestinationDescription</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!--//grids-->