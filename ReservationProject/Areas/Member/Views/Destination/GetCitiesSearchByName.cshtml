@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "GetCitiesSearchByName";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<form asp-action="GetCitiesSearchByName" method="get" asp-area="Member">
    <div>
        <p>
            Aranacak kelimeyi giriniz: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Ara" class="btn btn-outline-dark" />
        </p>
    </div>
</form>

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6>Rota Ara</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center justify-content-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">#</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Başlangıç Şehri</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Varış Şehri</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Süre</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Kapasite</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Fiyat</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2">
                                            <div>
                                                <img src="~/traversal/assets/images/@item.DestinationImage" class="avatar avatar-sm rounded-circle me-2" alt="Destination Image">
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-sm font-weight-bold mb-0">@item.DestinationStartingCity</p>
                                    </td>
                                    <td>
                                        <p class="text-sm font-weight-bold mb-0">@item.DestinationCity</p>
                                    </td>
                                    <td>
                                        <span class="text-xs font-weight-bold">@item.DestinationDayNight</span>
                                    </td>
                                    <td>
                                        <span class="text-xs font-weight-bold">@item.DestinationCapacity</span>
                                    </td>
                                    <td>
                                        <span class="text-xs font-weight-bold">$@item.DestinationPrice</span>
                                    </td>
                                    <td class="align-middle">
                                        <a href="#" class="btn btn-link text-secondary mb-0">
                                            <i class="fa fa-ellipsis-v text-xs"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

