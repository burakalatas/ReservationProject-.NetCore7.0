@model Destination
@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<body>
    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Tur Detayları</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index">Ana Sayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Tur Detayları </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!--/blog-->
    <div class="py-5 w3l-homeblock1 text-center">
        <div class="container mt-md-3">
            <h3 class="blog-desc-big text-center mb-4">
                Uzun bir çalışma döneminden sonra seyahat herkesin hakkı. Hemen bize katıl müthiş turları harika fırsatlarla yakala...
            </h3>
            <div class="blog-post-align">
                <div class="blog-post-img">
                    <a href="#"><img src="~/guideimages/@Model.Guide.GuideImage" alt="" class="rounded-circle img-fluid" /></a>
                </div>
                <div class="blog-post-info">
                    <div class="author align-items-center mb-1">
                        <a href="#">@Model.Guide.GuideName</a> in <a href="/Default/Index/">Traversal</a>
                    </div>
                    <ul class="blog-meta">
                        <li class="meta-item blog-lesson">
                            <span class="meta-value"> @Model.DestinationDate </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <section class="blog-post-main w3l-homeblock1">
        <!--/blog-post-->
        <div class="blog-content-inf pb-5">
            <div class="container pb-lg-4">
                <div class="single-post-image">
                    <div class="post-content">
                        <img src="~/Traversal/assets/images/@Model.DestinationCoverImage" class="radius-image img-fluid mb-5" alt="" />
                    </div>
                </div>
                <div class="single-post-content">
                    <p class="mb-4 text-center">
                        @Model.DestinationDetails
                    </p>
                    <div class="sing-post-thumb mb-5 row pt-3">
                        <div class="col-sm-6">
                            <a href="~/Traversal/assets#url"><img src="~/Traversal/assets/images/@Model.DestinationSubImage1" class="img-fluid radius-image" alt=""></a>
                        </div>
                        <div class="col-sm-6 mt-sm-0 mt-3">
                            <a href="~/Traversal/assets#url"><img src="~/Traversal/assets/images/@Model.DestinationSubImage2" class="img-fluid radius-image" alt=""></a>
                        </div>
                    </div>
                    <p class="mb-4">
                        @Model.DestinationDetails2
                    </p>

                    <div class="d-grid left-right mt-5 pb-md-5">
                        <div class="buttons-singles tags">
                            <h4>Etiketler :</h4>
                            <a href="~/Traversal/assets#blog-tag">Seyahat</a>
                            <a href="~/Traversal/assets#blog-tag">Kültür</a>
                            <a href="~/Traversal/assets#blog-tag">Otel</a>
                            <a href="~/Traversal/assets#blog-tag">Yemek</a>
                        </div>
                        <div class="buttons-singles">
                            <h4>Paylaş :</h4>
                            <a href="~/Traversal/assets#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                            <a href="~/Traversal/assets#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                            <a href="~/Traversal/assets#blog-share"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
                            <a href="~/Traversal/assets#blog-share"><span class="fa fa-pinterest-p" aria-hidden=" true"></span></a>
                        </div>
                    </div>

                    <!--//author-card-->
                    @await Component.InvokeAsync("_GuideDetails")

                    <!--//author-card-->
                    @await Component.InvokeAsync("_CommentList", new{id=ViewBag.id})
                    <a name="yorumyap"></a>
                    @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml", new{id=ViewBag.id})
                </div>
            </div>
        </div>
        <!--//blog-post-->
    </section>

</body>


