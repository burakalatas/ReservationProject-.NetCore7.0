@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Tur Yorumları</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Başlangıç Noktası</th>
                    <th>Varış Noktası</th>
                    <th>Yorum Tarihi</th>
                    <th>Durum</th>
                    <th>Dahası</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CommentName</td>
                        <td>@item.Destination.DestinationStartingCity</td>
                        <td><strong>@item.Destination.DestinationCity</strong></td>
                        <td>@item.CommentDate.ToShortDateString()</td>

                        @if (item.CommentStatus == true)
                        {
                            <td><span class="badge bg-label-success me-1">Aktif</span></td>
                        }
                        else
                        {
                            <td><span class="badge bg-label-danger me-1">Pasif</span></td>
                        }

                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Destination/DestinationDetails/@item.DestinationID"><i class="bx bx-show"></i> Sitede Gör</a>
                                    <a class="dropdown-item" href="/Admin/Comment/DeleteComment/@item.CommentID"><i class="bx bx-trash me-1"></i> Sil</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer" style="text-align:center;">
    </div>
</div>

